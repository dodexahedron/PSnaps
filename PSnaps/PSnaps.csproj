<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>13</LangVersion>
    <AssemblyName>PSnaps</AssemblyName>
    <RootNamespace>PSnaps</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ProduceReferenceAssembly>True</ProduceReferenceAssembly>
    <AnalysisLevel>latest-recommended</AnalysisLevel>
    <WarningLevel>8</WarningLevel>
    <VersionPrefix>0.2.0</VersionPrefix>
    <VersionSuffix>Alpha</VersionSuffix>
    <DebugType>portable</DebugType>
    <SuppressNETCoreSdkPreviewMessage>true</SuppressNETCoreSdkPreviewMessage>
  </PropertyGroup>

  <PropertyGroup>
    <Title>PSnaps</Title>
    <Description>A PowerShell module and .net library for management of Snap packages on Linux. Requires PS 7.5.4 or greater and .net 9.0 or greater.</Description>
    <Copyright>2025 Brandon Thetford. All rights reserved.</Copyright>
    <PackageProjectUrl>https://github.com/dodexahedron/PSnaps</PackageProjectUrl>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <RepositoryUrl>https://github.com/dodexahedron/PSnaps</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>snap;snapd;Linux;PSEdition_Core</PackageTags>
    <PackageReleaseNotes>Early development version. Functionality and API surface are subject to change.</PackageReleaseNotes>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Authors>dodexahedron</Authors>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Version>$(AssemblyVersion)</Version>
    <PackageOutputPath>$(OutputPath)\Nuget</PackageOutputPath>
    <GenerateDocumentationFile>False</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Formatting\GetSnapResponseResult.format.ps1xml" />
    <None Remove="Formatting\Publisher.format.ps1xml" />
    <None Remove="Formatting\RemoveSnapPackageResult.format.ps1xml" />
    <None Remove="PSnaps.psd1" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Formatting\RemoveSnapResult.format.ps1xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PackagePath>\tools\Formatting</PackagePath>
      <Pack>True</Pack>
    </Content>
    <Content Include="Formatting\GetSnapResponseResult.format.ps1xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>True</Pack>
      <PackagePath>\tools\Formatting</PackagePath>
    </Content>
    <Content Include="Formatting\Publisher.format.ps1xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>True</Pack>
      <PackagePath>\tools\Formatting</PackagePath>
    </Content>
    <Content Include="PSnaps.psd1">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>True</Pack>
      <PackagePath>\tools</PackagePath>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Management.Automation" Version="7.5.4" PrivateAssets="All" />
  </ItemGroup>
  
  <ItemGroup>
    <Using Include="JetBrains.Annotations" />
    <Using Include="PSnaps.SnapCore" />
    <Using Include="System.Diagnostics" />
    <Using Include="System.Diagnostics.CodeAnalysis" />
    <Using Include="System.Numerics" />
    <Using Include="System.Text.Json.Serialization" />
  </ItemGroup>

</Project>